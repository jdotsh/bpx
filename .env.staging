# BPMN Studio Web - Staging Environment
# ======================================

# App Configuration
NEXT_PUBLIC_APP_URL=https://staging.bpmn-studio.com
NEXT_PUBLIC_ENVIRONMENT=staging
NODE_ENV=production

# Supabase (Staging Project)
NEXT_PUBLIC_SUPABASE_URL=https://your-staging-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-staging-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-staging-service-role-key

# Database (via Supabase pooler)
DATABASE_URL=postgresql://postgres:password@db.your-staging-project.supabase.co:6543/postgres?pgbouncer=true
DIRECT_URL=postgresql://postgres:password@db.your-staging-project.supabase.co:5432/postgres

# Stripe (Test Mode)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_key
STRIPE_SECRET_KEY=sk_test_your_stripe_test_secret
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
STRIPE_PRO_MONTHLY_PRICE_ID=price_test_monthly
STRIPE_PRO_ANNUAL_PRICE_ID=price_test_annual

# Email Service (Resend)
RESEND_API_KEY=re_your_resend_api_key
EMAIL_FROM=BPMN Studio <noreply@staging.bpmn-studio.com>
RESEND_DOMAIN=staging.bpmn-studio.com

# Rate Limiting / Cache (Upstash Redis)
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token

# Observability
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=staging
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Feature Flags
FEATURE_REALTIME_COLLABORATION=false
FEATURE_AI_PROCESS_GENERATION=false
FEATURE_NOTION_SYNC=false
FEATURE_DRAWIO_EXPORT=false
FEATURE_ADVANCED_ANALYTICS=false

# Security
NEXTAUTH_SECRET=your-random-secret-key-for-staging
CSRF_SECRET=your-csrf-secret-for-staging

# Monitoring
DATADOG_API_KEY=your_datadog_api_key
DATADOG_SITE=datadoghq.com
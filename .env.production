# BPMN Studio Web - Production Environment
# =========================================

# App Configuration
NEXT_PUBLIC_APP_URL=https://app.bpmn-studio.com
NEXT_PUBLIC_ENVIRONMENT=production
NODE_ENV=production

# Supabase (Production Project)
NEXT_PUBLIC_SUPABASE_URL=https://your-prod-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-prod-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-prod-service-role-key

# Database (via Supabase pooler with connection pooling)
DATABASE_URL=postgresql://postgres:password@db.your-prod-project.supabase.co:6543/postgres?pgbouncer=true&pool_timeout=60
DIRECT_URL=postgresql://postgres:password@db.your-prod-project.supabase.co:5432/postgres

# Stripe (Live Mode)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_live_key
STRIPE_SECRET_KEY=sk_live_your_stripe_live_secret
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
STRIPE_PRO_MONTHLY_PRICE_ID=price_live_monthly
STRIPE_PRO_ANNUAL_PRICE_ID=price_live_annual

# Email Service (Resend)
RESEND_API_KEY=re_your_resend_api_key
EMAIL_FROM=BPMN Studio <noreply@bpmn-studio.com>
RESEND_DOMAIN=bpmn-studio.com

# Rate Limiting / Cache (Upstash Redis)
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token

# Observability
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Feature Flags (Controlled rollout)
FEATURE_REALTIME_COLLABORATION=true
FEATURE_AI_PROCESS_GENERATION=true
FEATURE_NOTION_SYNC=false
FEATURE_DRAWIO_EXPORT=true
FEATURE_ADVANCED_ANALYTICS=true

# Security
NEXTAUTH_SECRET=your-random-secret-key-for-production
CSRF_SECRET=your-csrf-secret-for-production

# Monitoring
DATADOG_API_KEY=your_datadog_api_key
DATADOG_SITE=datadoghq.com

# CDN & Performance
NEXT_PUBLIC_CDN_URL=https://cdn.bpmn-studio.com
NEXT_PUBLIC_IMAGE_OPTIMIZATION_URL=https://images.bpmn-studio.com